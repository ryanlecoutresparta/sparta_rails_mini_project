<div class="container">
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class = "table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Profile Pic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= image_tag user.prof_pic, class: 'profile_picture' %></td> 
        <td><%= link_to 'Show', user , class: 'btn btn-info'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
