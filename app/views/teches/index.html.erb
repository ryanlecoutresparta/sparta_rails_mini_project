<div class="container">
<p id="notice"><%= notice %></p>

<h1>Teches</h1>

<table class="table">
  <thead>
    <tr>
      <th>Technology</th>
      <th>Date created</th>
      <th>Version</th>
      <th>Desc</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teches.each do |tech| %>
      <tr>
        <td><%= tech.technology %></td>
        <td><%= tech.date_created %></td>
        <td><%= tech.version %></td>
        <td><%= tech.desc %></td>
        <td><%= tech.user.first_name %></td>
        <td><%= link_to 'Show', tech %></td>
        <% if user_signed_in? %>
          <% if current_user.id == tech.user_id%>
            <td><%= link_to 'Edit', edit_tech_path(tech) %></td>
            <td><%= link_to 'Destroy', tech, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
<br>
<%= link_to 'New Tech', new_tech_path %>
<% end %>
</div>
